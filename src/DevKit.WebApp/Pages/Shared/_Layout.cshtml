            <main class="flex-1 p-6 overflow-auto">
                <h1 class="text-2xl font-bold">Bem-vindo ao DevKit</h1>
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        document.querySelectorAll('.menu-item').forEach(item => {
          item.addEventListener('mouseenter', () => {
            const link = item.querySelector('a');
            const iconHtml = link.innerHTML;
            let panel = document.createElement('div');
            panel.className = 'absolute left-full top-0 bg-zinc-900 rounded-md shadow-lg w-48 z-50 hover-panel';

            // título do menu (opcional)
            let menuTitle = '';
            if (item.dataset.submenu) {
              if (iconHtml.includes('fa-home')) menuTitle = 'Dashboard';
              if (iconHtml.includes('fa-code')) menuTitle = 'Code Snippets';
              if (iconHtml.includes('fa-tools')) menuTitle = 'Tools';
              if (iconHtml.includes('fa-book')) menuTitle = 'Documentation';
              if (iconHtml.includes('fa-cog')) menuTitle = 'Settings';
            } else {
              if (iconHtml.includes('fa-home')) menuTitle = 'Dashboard';
              if (iconHtml.includes('fa-book')) menuTitle = 'Documentation';
              if (iconHtml.includes('fa-cog')) menuTitle = 'Settings';
            }

            // cabeçalho
            panel.innerHTML = `<div class="flex items-center space-x-3 px-4 py-3 bg-zinc-800 text-zinc-950">
                ${iconHtml}
                <span class="font-semibold text-zinc-950">${menuTitle}</span>
              </div>`;

            // submenus se houver
            if (item.dataset.submenu) {
              let submenuItems = JSON.parse(item.dataset.submenu);
              let ul = document.createElement('ul');
              ul.className = 'space-y-1';
              submenuItems.forEach(sm => {
                let li = document.createElement('li');
                li.innerHTML = `<a href="#" class="block text-xs m-2 p-2 rounded-lg hover:bg-zinc-800">${sm.label}</a>`;
                ul.appendChild(li);
              });
              panel.appendChild(ul);
            }

            item.appendChild(panel);
          });

          item.addEventListener('mouseleave', () => {
            const panel = item.querySelector('.hover-panel');
            if (panel) panel.remove();
          });
        });
    </script>
</body>
</html>